{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    },
    {
      "src": "script.js", 
      "use": "@vercel/static"
    },
    {
      "src": "contacts.css",
      "use": "@vercel/static"
    },
    {
      "src": "contacts.js",
      "use": "@vercel/static"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "contacts.html",
      "use": "@vercel/static"
    },
    {
      "src": "resources/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/check-username",
      "dest": "server/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/register",
      "dest": "server/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/login",
      "dest": "server/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/uploadProfilePicture",
      "dest": "server/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/steganography",
      "dest": "server/server.js"
    },
    {
      "src": "/style.css",
      "dest": "/style.css"
    },
    {
      "src": "/script.js",
      "dest": "/script.js"
    },
    {
      "src": "/contacts.css",
      "dest": "/contacts.css"
    },
    {
      "src": "/contacts.js",
      "dest": "/contacts.js"
    },
    {
      "src": "/resources/(.*)",
      "dest": "/resources/$1"
    },
    {
      "src": "/contacts.html",
      "dest": "/contacts.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "server/server.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}